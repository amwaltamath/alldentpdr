---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Get a Free Dent Repair Estimate | AllDent PDR Cincinnati';
const description = 'Request a free paintless dent repair estimate in Cincinnati, OH. Same-day replies, photo-based quotes, and flexible scheduling. Call 1-855-425-5336.';
const breadcrumbs = [
  { name: 'Home', url: 'https://alldentpdr.com' },
  { name: 'Contact', url: 'https://alldentpdr.com/contact' }
];
---

<BaseLayout title={title} description={description} canonical="https://alldentpdr.com/contact" breadcrumbs={breadcrumbs}>
  <section class="page-hero container">
    <h1>Get a free estimate</h1>
    <p>Share a few details and we will reply the same day with pricing and availability.</p>
  </section>

  <section class="section alt">
    <div class="container contact-panel">
      <div class="form-card">
        <h3>Estimate request</h3>
        <p>Fill out the form and we'll email you back within 24 hours.</p>
        <form action="https://formspree.io/f/xykdeqjr" method="POST">
          <label>
            Name
            <input type="text" name="name" placeholder="Your name" required />
          </label>
          <label>
            Email
            <input type="email" name="email" placeholder="you@email.com" required />
          </label>
          <label>
            Vehicle
            <input type="text" name="vehicle" placeholder="Year, make, model" />
          </label>
          <label>
            Describe the damage
            <textarea name="message" rows="4" placeholder="Location, size, and any details" required></textarea>
          </label>
          <button class="button primary" type="submit">Send request</button>
        </form>
      </div>
      <div class="card">
        <h3>Reach us directly</h3>
        <p>Phone: 1 855-425-5336</p>
        <p>Email: alldentpdr@gmail.com</p>
        <p>Service area: Cincinnati, OH and Northern Kentucky.</p>
        <div class="button-row">
          <a class="button ghost" href="/services">Review services</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
