---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Paintless Dent Repair Blog | Tips & Guides | AllDent PDR Cincinnati';
const description = 'Learn about paintless dent repair in Cincinnati. Tips on PDR cost, repair timelines, hail damage recovery, and how to protect your vehicle.';
const breadcrumbs = [
  { name: 'Home', url: 'https://alldentpdr.com' },
  { name: 'Blog', url: 'https://alldentpdr.com/blog' }
];
---

<BaseLayout title={title} description={description} canonical="https://alldentpdr.com/blog" breadcrumbs={breadcrumbs}>
  <section class="page-hero container">
    <h1>Paintless dent repair insights</h1>
    <p>Learn how PDR works, what to expect, and how to protect your vehicle.</p>
  </section>

  <section class="section alt">
    <div class="container blog-list">
      <article class="blog-item">
        <h3><a href="/blog/paintless-dent-repair-cincinnati">Paintless Dent Repair Cincinnati: what to know</a></h3>
        <p>Understand pricing, repair times, and how to get a fast estimate.</p>
      </article>
    </div>
  </section>
</BaseLayout>
